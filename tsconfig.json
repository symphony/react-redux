{
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "es5",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noEmit": true,
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types",
      "types"
    ]
  },
  "include": [
    "./src/**/*.ts*",
    "types", "src/index.*", "src/App.jsx",
  ]
}